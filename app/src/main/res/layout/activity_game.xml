<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#333"
        app:title="Kotlin Slots"
        app:titleTextColor="#FFF"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portfel: 1000.00 $"
        android:textColor="#FFD700"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/reelsContainer"
        android:layout_width="wrap_content"
        android:layout_height="384dp" 
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:clipToPadding="false"
        android:clipChildren="true">

        <ImageView
            android:id="@+id/ivReel1"
            android:layout_width="128dp"
            android:layout_height="wrap_content" 
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/slot_sprite" />

        <ImageView
            android:id="@+id/ivReel2"
            android:layout_width="128dp"
            android:layout_height="wrap_content" 
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/slot_sprite" />

        <ImageView
            android:id="@+id/ivReel3"
            android:layout_width="128dp"
            android:layout_height="wrap_content" 
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/slot_sprite" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reelsFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/reelsContainer"
        app:layout_constraintBottom_toBottomOf="@id/reelsContainer"
        app:layout_constraintStart_toStartOf="@id/reelsContainer"
        app:layout_constraintEnd_toEndOf="@id/reelsContainer">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="#FFD700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="128dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="#FFD700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="256dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etBet"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Stawka"
        android:text="10"
        android:inputType="numberDecimal"
        android:textColor="#FFF"
        android:textColorHint="#AAA"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/reelsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnSpin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SPIN"
        android:backgroundTint="#D32F2F"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/etBet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia Gier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>